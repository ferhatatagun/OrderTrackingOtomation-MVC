@model _SiparisTakipSistemi.Models.ViewModels.SiparisDurumlarıVm

@{
    ViewBag.Title = "SiparisDurumlari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @*<div class="title-search-block">
        <div class="title-block">*@
            <div class="row">
                <div class="col-md-6">
                    <h3 class="title">
                        Tüm Siparişlerin Sipariş Durumları<br />
                        <br />
                        <br />
                        <a>
                            @Html.ActionLink("Sipariş Gir", "SiparisGir", "Home", new { @class = "btn btn-primary btn-sm rounded-s" })
                        </a>
                        <br />
                        <div class="action dropdown">
                            <button class="btn  btn-sm rounded-s btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Daha Fazla
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <a class="dropdown-item" href="~/Home/SiparisDuzenle/"><i class="fa fa-pencil-square-o icon"></i>Sipariş Düzenle</a>
                                <a class="dropdown-item" href="~/Home/SiparisSil"><i class="fa fa-pencil-square-o icon"></i>Sipariş Sil</a>
                            </div>
                        </div>
                    </h3>

                </div>
            </div>
        @*</div>*@
        <div class="items-search">
            <form class="form-inline">
                <div class="input-group">
                    <input type="text" class="form-control boxed rounded-s" placeholder="Arama Yapın..."> <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    @*</div>*@

    <div class="card items">
        <ul class="item-list striped">
            <li class="item item-list-header hidden-sm-down">
                <div class="item-row">
                    <div class="item-col fixed item-col-check">
                        <label class="item-check" id="select-all-items">
                            <input type="checkbox" class="">
                            <span></span>
                        </label>
                    </div>
                    <div class="item-col item-col-header fixed item-col-img md">
                        <div> <span><h5>Sipariş</h5></span> </div>
                    </div>
                    <div class="item-col item-col-header item-col-title">
                        <div> <span><h5>Ürün Adı</h5></span> </div>
                    </div>
                    <div class="item-col item-col-header item-col-category">
                        <div> <span><h5>Ürün Modeli</h5></span> </div>
                    </div>
                    <div class="item-col item-col-header item-col-category">
                        <div class="no-overflow"> <span><h5>Sipariş Durumu</h5></span> </div>
                    </div>

                    <div class="item-col item-col-header fixed item-col-actions-dropdown"> </div>
                </div>
            </li>
            @foreach (var item in Model.SiparisDurumlari)

            {
                <li class="item">
                    <div class="item-row">
                        <div class="item-col fixed item-col-check">
                            <label class="item-check" id="select-all-items">
                                <input type="checkbox" class="">
                                <span></span>
                            </label>

                        </div>

                        <div class="item-col fixed item-col-img md">
                            <a href="#">
                                <div class="item-img rounded" style="background-image: url(https://cdn1.iconfinder.com/data/icons/amenities/500/sofa-512.png)"></div>
                            </a>
                        </div>

                        <div class="item-col fixed pull-left item-col-title">
                            <div class="item-heading">UrunAdi</div>
                            <div>
                                <a href="#" class="">
                                    <h4 class="item-title">
                                        @item.UrunAdi
                                    </h4>
                                </a>
                            </div>
                        </div>

                        <div class="item-col item-col-sales">
                            <div class="item-heading">Model</div>
                            <div> @item.Model</div>
                        </div>


                        <div class="item-col item-col-category no-overflow">
                            <div class="item-heading">Sipariş Durumu</div>
                            <div class="no-overflow"> @item.SiparisDurumu </div>

                        </div>

                        <div class="item-col fixed item-col-actions-dropdown">
                            <div class="item-actions-dropdown">
                                <a class="item-actions-toggle-btn">
                                    <span class="inactive">


                                    </span> <span class="active">
                                        <i class="fa fa-chevron-circle-right"></i>
                                    </span>
                                </a>


                            </div>
                        </div>

                    </div>

                </li>

            }
        </ul>
    </div>
    <div class="container">


       
            <ul class="pagination">

                <li>@Html.PageLinks(Model.PagingInfo, x => Url.Action("TumSiparisler", new { page = x }))</li>
            </ul>
    

    </div>
   

